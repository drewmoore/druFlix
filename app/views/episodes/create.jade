extends ../shared/template

block content

  .row
    .small-6.columns
      .row
        .series-cover-home(style='background-image: url("' + series.cover + '");')
    .small-6.columns
      .row
        h1 #{series.title} (#{series.releaseYear})
      .row
        .small-12.columns
          form#add-show-form(action='/episodes/create', method='post', enctype='multipart/form-data')
            fieldset
              legend Add an Episode
              .row
                .small-6.columns
                  label Upload an Episode
                  small required
                  input(name='videoFile', type='file', required=true)
                .small-6.columns
                  label Episode Title
                  input(name='episodeTitle', type='text', value='')
              .row
                .small-6.columns
                  label Season #
                  small Helps keep episodes arranged in order.
                  input(name='episodeSeason', type='text', value=0)
                  label Episode #
                  input(name='episodeEpisodeNo', type='text', value=0)
                .small-6.columns
                  input(name='episodeType', type='hidden', value='tv')
                  -var episodeSeriesId = series._id.toString();
                  input(name='episodeSeriesId', type='hidden', value=episodeSeriesId)
                  input(name='episodeSeriesTitle', type='hidden', value=series.title)

                  button.add-movie-button.tiny.radius.expand Add the Episode


  .row
    .small-2.columns
      &nbsp;
    .small-8.columns
      if err
        span.jesse-span
          img(src='/img/jesse.jpg')
        span.error-text
          h5 Jesse Says:
          p &quot;#{err}&quot;
    .small-2.columns
      &nbsp;
